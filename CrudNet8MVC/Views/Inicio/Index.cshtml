@model IEnumerable<CrudNet8MVC.Models.Contacto>
@{
    ViewData["Title"] = "Lista de contactos";
}

<h1 class="text-center">Contacto con .NET 8 (.NET Core MVC)</h1>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Agregar usuario
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de usuarios</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0) //Verificamos que haya registros en nuestra tabla
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var campo in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => campo.Id)</td>
                                        <td>@Html.DisplayFor(m => campo.Nombre)</td>
                                        <td>@Html.DisplayFor(m => campo.Telefono)</td>
                                        <td>@Html.DisplayFor(m => campo.Celular)</td>
                                        <td>@Html.DisplayFor(m => campo.Email)</td>
                                        <td>@Html.DisplayFor(m => campo.FechaCreacion)</td>

                                        <td> <a class="btn btn-warning" asp-action="Editar" asp-route-id="@campo.Id"><i class="fa-solid fa-pen-to-square"></i> Editar</a> </td>
                                        <td> <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@campo.Id"><i class="fa-solid fa-circle-info"></i> Detalles</a> </td>
                                        <td> <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@campo.Id"><i class="fa-solid fa-trash"></i> Borrar</a> </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>